{
    "name": "khalyomede/php-typo",
    "description": "A command line tool to validate files do not have English typo in variables, methods, functions, ...",
    "type": "library",
    "license": "MIT",
    "version": "0.1.0",
    "autoload": {
        "psr-4": {
            "Khalyomede\\PhpTypo\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Khalyomede",
            "email": "khalyomede@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.1.0",
        "nikic/php-parser": "4.15.1",
        "symfony/console": "6.1.4",
        "aminnairi/string-extra": "0.1.0"
    },
    "bin": [
        "bin/php-typo"
    ],
    "scripts": {
        "typo": "php-typo",
        "analyse": "phpstan",
        "test": "pest",
        "lint": "php-cs-fixer fix --diff --using-cache=no --allow-risky=yes --dry-run",
        "format": "php-cs-fixer --using-cache=no --allow-risky=yes fix",
        "check-updates": "composer outdated --strict --direct --ignore jawira/case-converter"
    },
    "require-dev": {
        "phpstan/phpstan": "1.8.5",
        "pestphp/pest": "1.22.1",
        "friendsofphp/php-cs-fixer": "3.11.0",
        "phpstan/phpstan-strict-rules": "1.4.3"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
